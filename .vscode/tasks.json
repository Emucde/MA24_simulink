{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file (default)",
            "command": "./build.sh",
            "args": [
                "-d",
                "${env:masterdir}/main_ros2/casadi_mpc/cpp_class_files" //"${fileDirname}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/main_ros2/casadi_mpc"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build and Run (-O3)",
            "type": "shell",
            "command": "./build.sh",
            "args": [
                "-r",
                "${env:masterdir}/main_ros2/casadi_mpc/cpp_class_files"//"${fileDirname}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/main_ros2/casadi_mpc"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Run Build (No Debug Info)"
            ],
            "detail": "Build and run the project without debug info."
        },
        {
            "label": "Create cmake files (Debug and Release)",
            "type": "shell",
            "command": "../build.sh",
            "args": [
                "-c",
            ],
            "options": {
                "cwd": "${workspaceFolder}/main_ros2/casadi_mpc/cpp_class_files"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "detail": "Only run cmake -DCMAKE_BUILD_TYPE=Release .. and cmake -DCMAKE_BUILD_TYPE=Debug .."
        },  
        {
            "label": "Build ALL (ROS2 Release)",
            "type": "shell",
            "command": "./build.sh",
            "args": [
                "-r",
                "all",
            ],
            "options": {
                "cwd": "${workspaceFolder}/main_ros2/casadi_mpc"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Run Build (No Debug Info)"
            ],
            "detail": "Build and run the project without debug info."
        },
        {
            "label": "Build ALL (ROS2 Debug)",
            "type": "shell",
            "command": "./build.sh",
            "args": [
                "-d",
                "all",
            ],
            "options": {
                "cwd": "${workspaceFolder}/main_ros2/casadi_mpc"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Run Build (No Debug Info)"
            ],
            "detail": "Build and run the project without debug info."
        },
